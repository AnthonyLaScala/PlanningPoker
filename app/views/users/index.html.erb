<head><meta http-equiv="refresh" content="1" /></head>
<p id="notice"><%= notice %></p>
<center>
<h1>Current Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Vote</th>
      <th colspan="10"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= 'x' %></td>


        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>


  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>


</center>
